<!-- views/admincp/login.ejs -->
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/Frontend/css/cp/admin.css">
    <link rel="icon" href="Frontend/eo.ico" type="image/x-icon">
</head>
<body>
    <div class="container ns">
        <img src="/Frontend/img/EO.png" draggable="false" class="logo-img">
        <div class="login-form">
            <h2 class="header-title">لوحة التحكم</h2>
            <form action="/admincp/login" method="POST">
                <div class="form-group">
                    <input type="email" name="email" autocomplete="on" id="email" placeholder="البريد الإلكتروني" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" placeholder="كلمة المرور" required>
                </div>
                <button type="submit">تسجيل الدخول <i class="fas fa-arrow-circle-right"></i></button>
                <p class="error" id="error-message"></p>
                <% if (error) { %>
                    <p class="error"><%= error %></p>
                <% } %>
            </form>
        </div>
        <p class="copyright">
            easyOrder &copy; | made with <i class="fas fa-heart text-danger"></i>  by yosf.143
        </p>
    </div>
</body>
</html>
